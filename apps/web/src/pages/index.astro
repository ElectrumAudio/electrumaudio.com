---
import { Image } from 'astro:assets';
import emblem from '../assets/emblem-sage-broken-02@3x.png';
import whiteLogo from '../assets/logo-centered-white-01.svg';
import "../styles/styles.css";
---
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Electrum Audio is coming soon...</title>
    <meta charset="utf-8">
    <!-- <meta name="viewport" content="width=device-width,initial-scale=1"> -->
    <meta name="viewport" content="width=device-width, viewport-fit=cover">
    <meta name="title" content="Electrumaudio.com, home of artisanal audiophile equipment, is coming soon">
    <meta name="description" content="Electrumaudio.com is a maker of artisanal audiophile equipment">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://electrumaudio.com">
    <meta property="og:site_name" content="electrumaudio.com">
    <meta property="og:title" content="Electrum Audio">
    <meta property="og:description" content="Electrumaudio.com is a maker of artisanal audiophile equipment">
    <meta property="og:image" content="https://electrumaudio.com/homepage-twitter-card.webp">
    <meta property="og:image:width" content="1920">
    <meta property="og:image:height" content="1152">
    <meta property="og:image:alt" content="The Electrum Audio logo and emblem over a Mediterranean night scene">
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:site" content="@electrumaudio">
    <meta property="twitter:creator" content="@replicantdeckrd">
    <meta property="twitter:url" content="https://electrumaudio.com/">
    <meta property="twitter:title" content="Electrum Audio">
    <meta property="twitter:description" content="Electrumaudio.com is a maker of artisanal audiophile equipment">
    <meta property="twitter:image" content="https://electrumaudio.com/homepage-twitter-card.webp">
    <meta property="twitter:image:alt" content="The Electrum Audio logo and emblem over a Mediterranean night scene">
    <link rel="icon" href="/favicon-96w.ico">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=PT+Serif:ital@0;1&display=swap" rel="stylesheet">
</head>
<body>
    <header></header>
    <main>
        <div id="logo">
            <h1>Welcome to Electrum Audio</h1>
            <Image src={emblem} id="emblem" alt="The Electrum Audio circular emblem" />
            <Image src={whiteLogo} id="logo-white" alt="The Electrum Audio text logo" />
        </div>
        <p id="tagline">artisanal audiophile components</p>
        <p id="coming-soon">coming soon&hellip;</p>
        <a href="mailto:info@electrumaudio.com" id="contact">info@electrumaudio.com</a>
    </main>
    <footer>
        <p>copyright &copy; 2023 electrum audio</p>
    </footer>
</body>
</html>
<style>
    p, a {
        font-family: 'PT Serif', serif;
        display: block;
        font-size: 2rem;
        text-align: center;
        /* filter: drop-shadow(0 0 12px var(--sand)); */
        color: var(--dark);
        letter-spacing: 0.5ch;
        margin: 5rem auto;
    }
    #tagline {
        /* background-color: var(--dark); */
        /* color: white; */
        color: var(--crimson);
        margin-top: 3.5rem;
    }
    #coming-soon {
        font-style: italic;
    }
    #contact {
        font-size: 1.1rem;
    }
    a:hover {
        color: var(--clay);
    }
    header {
        height: 5vh;
        background-color: var(--dark);
        width: 100%;
        border-bottom: 1px solid var(--clay);
        z-index: 99;
    }
    #logo {
        height: 45vh;
        width: 100%;
        z-index: 98;
        /* border-bottom: 2px solid var(--clay); */
        box-shadow: 0 10px 10px rgba(0,0,0,0.3);
        background: var(--dark) center / cover no-repeat url('../assets/hero-backdrop-001-2140w.webp');
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        padding: 2.5vh;
    }
    #logo > img {
        object-fit: contain;
    }
    #emblem {
        height: 35vh;
        width: auto;
    }
    #logo-white {
        wioth: 40vw;
        height: auto;
    }
    #logo > h1 {
        display: none;
    }
    footer {
        min-height: 15vh;
        border-top: 1px solid var(--clay);
        background: var(--dark) center / cover no-repeat url('../assets/soldiers-footer.png');
        display: flex;
        align-items: end;
        filter: drop-shadow(0 0 12px rgba(0,0,0,0.5));
    }
    footer > p {
        font-size: 0.8rem;
        margin: 1rem auto;
        padding: 0;
        color: var(--crimson);
    }
    @media (max-width: 825px) {
        #logo {
            flex-direction: column;
        }
        #emblem {
            width: 40vw;
            height: auto;
        }
        #logo-white {
            width: 75vw;
            height: auto;
            margin: 4vh 0;
        }
        p, a {
            font-size: 1rem;
            margin: 3rem auto;
        }
        #tagline {
            margin-top: 2rem;
        }
        #contact {
            font-size: 0.7rem;
            margin-bottom: 2rem;
        }
        footer > p {
            font-size: 0.5rem;
        }
    }
</style>