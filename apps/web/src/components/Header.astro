---
import { Image } from 'astro:assets';
import emblemSage from "../assets/emblem-sage-broken-01.svg";
---
<header>
    <Image src={emblemSage} alt="The Electrum Audio emblem, with an epsilon and alpha character" />
    <!-- <p id="company-tagline">artisanal audiophile components</p> -->
</header>
<style>
    header {
        width: 100%;
        height: 7vh;
        background: linear-gradient(var(--dark), rgb(75,75,75));
        box-shadow: 0 10px 10px rgba(0,0,0,0.9);
        position: sticky;
        top: 0;
        /* display: flex;
        align-items: center;
        justify-content: space-between; */
        border-bottom: 2px solid var(--umber);
        z-index: 99;
    }

    header img {
        /* max-height: 75px; */
        height: 8vh;
        width: auto;
        margin: 0;
        padding: 0;
    }

    header p {
        color: white;
    }

    p#company-tagline {
        font-size: 1.2rem;
        letter-spacing: 0.33ch;
        font-weight: bold;
        font-style: italic;
        margin: 0;
        padding: 0;
        margin-right: 2rem;
    }

    @media (max-width: 716px) {
        header {
            height: 6vh;
        }

        header img {
            height: 7vh;    
        }
    }
</style>