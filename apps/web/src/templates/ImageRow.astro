---
const { frontmatter } = Astro.props;
const twoColumns = (frontmatter.mobilecolumns === 1) ? false : true;
---
<div class:list={['image-row', {"two-mobile-columns": twoColumns}]}>
    <slot />
</div>
<style is:global>
    main > .image-row {
        padding: 0 7rem 3rem;
        margin: 3rem 0;
        justify-content: center;
        align-items: center;
        display: flex;
        flex-wrap: wrap;
        box-sizing: border-box;
        row-gap: 1rem;
        width: 100%;
    }

    main > .image-row > p {
        width: 20%;
        height: auto;
        padding: 0;
        margin: 0;
        line-height: 0;
        flex-basis: auto;
    }

    main > .image-row > p > img {
        object-fit: contain;
        max-height: 125px;
        width: 100%;
        height: auto;
    }

    @media (max-width: 716px) {
        main > .image-row {
            row-gap: 10vw;
            padding: 0 5vw;
            justify-content: space-evenly;
        }
        main > .image-row > p {
            width: 50vw;
            margin: 0 auto;
        }
        main > .two-mobile-columns > p {
            width: 35vw;
            /* margin: 0 auto; */
        }
        main > .image-row > p > img {
            max-height: 20vh;
        }
    }
</style>