---
const { frontmatter } = Astro.props;
---
<figure class="pullquote">
    <blockquote><slot /></blockquote>
    {frontmatter.author &&
    <figcaption>{frontmatter.author}</figcaption>
    }
</figure>
<style is:global>
    main > .pullquote {
        margin: 4rem 20vw;
        text-align: center;
    }
    main > .pullquote p {
        font-size: 1.8rem;
        line-height: 2.2rem;
        color: var(--sky);
    }
    main > .pullquote > figcaption {
        font-style: italic;
        font-size: 1.4rem;
        text-align: right;
    }
    main > .pullquote > figcaption::before {
        content: 'â€”';
        margin-right: 2px;
        display: inline-block;
    }

    @media (max-width: 716px) {
        main > .pullquote {
            margin: 1.5rem 10vw;
        }
        main > .pullquote p {
            font-size: 1.3rem;
            line-height: 1.6rem;
        }
        main > .pullquote > figcaption {
            font-size: 1.3rem;
            margin-top: 0.65rem;
        }
    }
</style>